<html>
    <head>
        <title>Home Page</title>
        <link rel="stylesheet" href="/output.css">
    </head>

    <body class="flex flex-col justify-center items-center h-screen font-serif 
    bg-slate-300">
    <div class="w-xl bg-gray-50 border-2 rounded-xl border-slate-900 
    flex flex-col justify-center">
    <div class="mx-10 my-2">
        <div class="flex gap-3 my-2">
            <div class="w-20">
                Author: 
            </div>
            <input class="border-2 rounded-sm focus:rounded-sm border-gray-700 focus:border-gray-700 pl-1 flex-1
            text-gray-700" type="text" name="author" id="author" 
            value="<%= message.author %>" readonly>
        </div>
        <div class="flex gap-3 my-2">
            <div class="w-20">
                Message: 
            </div>
            <textarea class="border-2 resize-none pl-1
            text-gray-700 flex-1 rounded-sm focus:rounded-sm 
            border-gray-700" name="message" id="message" readonly><%- message.message %>
            </textarea>
        </div>
        <div class="flex gap-3 my-2">
            <div class="w-20">
                Timestamp:
            </div>
            <textarea class="border-2 rounded-sm focus:rounded-sm border-gray-700 
            focus:border-gray-700 pl-1 flex-1 resize-none
            text-gray-700" type="text" name="author" id="author" 
            readonly><%- message.date.toString() %>    
        </textarea>
        </div>
    </div>
    </div>
    <a href="/" class="mt-3 mb-64 hover:underline">Back to Home page</a>
    </body>
</html>